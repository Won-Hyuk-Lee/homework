	여기에 차트
	<br>
	<div id="my_chart_div"></div>

	<script>
	$( function(){
		

		$.ajax({
			method      : "POST",
	        url         : "<%=request.getContextPath()%>/EmpServlet",
	  		error 	    : function(myval){ console.log("에러:" + myval);   },
	  		success     : function(myval) {
                console.log("성공:", myval);
                // JSON 형식으로 받은 데이터를 파싱
                var data = JSON.parse(myval);
                console.log(data); // 파싱된 데이터를 확인
                // 데이터를 원하는 형식으로 출력
                var formattedData = JSON.stringify(data, null, 4);
                console.log("Formatted Data:", formattedData);
                // 여기서 출력된 데이터를 페이지에 표시
                $('#my_chart_div').html('<pre>' + formattedData + '</pre>');
            }
		});
	});
	
	</script>

	<script>
		var chart = c3.generate({
			bindto : '#my_chart_div',
			data : {
				columns : [ [ 'data1', 30, 200, 100, 400, 150, 50

				] ]
			}
		});
	</script>
